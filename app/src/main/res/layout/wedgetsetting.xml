<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#cc1ba5e1"
            android:padding="10dp"
            android:text="小部件"
            android:textSize="30sp" />

        <Switch
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:id="@+id/open_wedget_tool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开启小部件功能" />
        <TextView
            android:layout_marginTop="10sp"
            android:background="#25000000"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/open_wedget_tool_layout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/open_wedget_tool_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="正在尝试启动桌面小部件后台服务"
                    android:textAlignment="center"
                    android:textColor="#06f416"
                    android:textSize="20sp" />
            </LinearLayout>

            <Button
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:id="@+id/repair_wedget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="尝试修复桌面小部件" />

            <TextView
                android:visibility="gone"
                android:id="@+id/errTv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="#f00"
                />

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>