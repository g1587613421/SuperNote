<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#03a9f4"
            android:padding="10dp"
            android:text="日志和隐私"
            android:textSize="20sp" />

        <Switch
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10sp"
            android:textSize="15sp"
            android:id="@+id/systemlog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="启用系统日志" />
        <TextView
            android:layout_marginTop="10sp"
            android:background="#25000000"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/log_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="5sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="记录用户操作和系统信息,当程序出现问题时可提交给开发者" />

            <TextView
                android:layout_marginTop="10sp"
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="系统日志占用最大空间(单位M)" />

            <SeekBar
                android:id="@+id/sysLogSize"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="5"
                android:progress="3" />
        </LinearLayout>

        <Switch
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/shownotelog"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="为每个便签创建日志" />


        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/log_layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/red200"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="在每一个便签中点击右上角菜单即可查看" />
            <TextView
                android:layout_marginTop="10sp"
                android:background="#25000000"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <Switch
                android:layout_marginTop="10sp"
                android:id="@+id/note_log_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="详细记录(记录改动内容)" />
            <TextView
                android:layout_marginTop="10sp"
                android:background="#25000000"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>