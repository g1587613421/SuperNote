<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gplibs.magic_surface_view_sample.MultiScrapAnimActivity">

    <com.gplibs.magicsurfaceview.MagicSurfaceView
        android:id="@+id/magic_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:padding="20dp"
        android:text="Click anywhere"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/surface_bg"
        android:textSize="250sp"
        android:text="S"
        android:textColor="@color/c3"/>

</FrameLayout>
